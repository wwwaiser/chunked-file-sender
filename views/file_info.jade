extends layout

block content
    .wrapper
        h1.title Easy sharing
        .main-content
            div.file-block
                .choise-button
                    a.button-text(href= href) Download
            div.info-block
                ul.info
                    li
                        span.key Name:
                        span.value.name= name
                    li
                        span.key Type:
                        span.value.type= type
                    li
                        span.key Size:
                        span.value.size= size
